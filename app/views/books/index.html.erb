<body>
    <% if flash[:notice] %>
      <div class="flash">
        <%= flash[:notice] %>
      </div>
    <% end %>
  <h1>Books</h1>
  <table>
    <thead>
      <tr>

        <th>Title</th>
        <th>Body</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <% @books.each do |book| %>


     <tbody>
       <tr>
         <td><%= book.title %></td>
         <td><%= book.body %></td>
         <td>
          <%= link_to "Show", book_path(book)%>
         </td>
         <td>
           <%= link_to "Edit", edit_book_path(book)%>
         </td>
         <td>
           <%= link_to "Destroy", book_path(book), method: :delete, "data-confirm" => "Are you sure?" %>
         </td>
       </tr>
     </tbody>
    <% end %>
  </table>
  <h2>New book</h2>
  <%= form_with model:@book, local:true do |f| %>
　   <% if @book.errors.any? %>
　　 <%= @book.errors.count %>errors
　　 <% @book.errors.full_messages.each do |message| %>
　　 <%= message %>
　　 <% end %>
　　 <% end %><br />
    <label>Title</label><br />
    <%= f.text_field :title %><br />

    <label>Body</label><br />
    <%= f.text_area :body %>

    <br /><%= f.submit 'Create Book' %>
  <% end %>
</body>